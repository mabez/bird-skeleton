{% set messageError = flashmessenger().render('error') %}
{% set messageSuccess = flashmessenger().render('success') %}
{% set messageWarning = flashmessenger().render('warning') %}
{% if messageError %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="well well-sm">
				    <div class="alert alert-danger" role="alert">
				    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
				    	{{messageError|raw}}
					</div>            	
				</div>
			</div>
		</div>
	</div>
{% endif %}
{% if messageSuccess %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="well well-sm">
				    <div class="alert alert-success" role="alert">
				    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
				    	{{messageSuccess|raw}}
					</div>            	
				</div>
			</div>
		</div>
	</div>
{% endif %}
{% if messageWarning %}
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-12">
				<div class="well well-sm">
				    <div class="alert alert-warning" role="alert">
				    	<button type="button" class="close" data-dismiss="alert" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
				    	{{messageWarning|raw}}
					</div>            	
				</div>
			</div>
		</div>
	</div>
{% endif %}
