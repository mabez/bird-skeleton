{% extends 'admin/index/index' %}
{% block conteudo %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
			<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
	        <div class="row">
			  <div class="col-xs-12 col-sm-6 col-md-12">
			  	<p class="text-right"><a href="modificar/0/admin-anuncios" class="btn btn-primary btn-lg">Incluir Anúncio</a></p>
			  </div>
            </div>
			  <div class="panel panel-default">
				  {% for count, anuncio in anuncios %}
				    <div class="panel-heading" role="tab" id="heading{{count}}">
				      <h4 class="panel-title">
				        <div class="row">
						  <div class="col-xs-12 col-sm-6 col-md-8">
						  	<a data-toggle="collapse" data-parent="#accordion" href="#collapse{{count}}" aria-expanded="true" aria-controls="collapse{{count}}"><span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span>{{anuncio.titulo}} <span class="zf-green">{{currencyFormat(anuncio.preco, 'BRL', null, 'pt_BR')}}</span></a>
					  	  </div>
						  <div class="col-xs-6 col-md-4">
						  	<p class="text-right"><a href="modificar/{{anuncio.id}}/admin-anuncios"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></p></div>
						</div>
				      </h4>
				    </div>
				    <div id="collapse{{count}}" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="heading{{count}}">
				      <div class="panel-body">
						<strong>Descrição:</strong> {{anuncio.descricao}}
				      </div>
			    	</div>
				  {% endfor %}
			  </div>
			</div>         
        </div>
    </div>
</div>
{% endblock %}
