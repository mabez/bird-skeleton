{% extends 'site/layout' %}
{% block conteudo %}
<h1>Erro 404</h1>
<h2>{{message}}</h2>

{% if reason == 'error-controller-cannot-dispatch' %}
    {% set reasonMessage = 'O controlador solicitado não foi capaz de despachar o pedido.' %}
{% elseif reason == 'error-controller-not-found' %}
    {% set reasonMessage= 'O controlador solicitada não pode ser mapeado para uma classe de controlador existente.' %}
{% elseif reason == 'error-controller-invalid' %}
    {% set reasonMessage= 'O controlador solicitado não foi despachável .' %}
{% elseif reason == 'error-router-no-match' %}
    {% set reasonMessage= 'A URL solicitada não pode ser igualada por roteamento .' %}
{% else %}
    {% set reasonMessage= 'Página não encontrada.' %}
{% endif %}

<p>{{reasonMessage}}</p>

<dl>
    <dt>Controller:</dt>
    <dd>{{controller}} (resolves to {{controller_class}})</dd>
</dl>

<hr/>
<h2>Additional information:</h2>
<h3>{{exception}}</h3>
<dl>
    <dt>File:</dt>
    <dd>
        <pre class="prettyprint linenums">{{exception.getFile}}:{{exception.getLine}}</pre>
    </dd>
    <dt>Message:</dt>
    <dd>
        <pre class="prettyprint linenums">{{exception.getMessage}}</pre>
    </dd>
    <dt>Stack trace:</dt>
    <dd>
        <pre class="prettyprint linenums">{{exception.getTraceAsString}}</pre>
    </dd>
</dl>
{% endblock conteudo %}
