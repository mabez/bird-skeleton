{% extends 'site/index/index' %}
{% block cabecalho %}
{% endblock cabecalho %}
{% block conteudo %}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1>Login</h1>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-12">
            {{form().openTag(formulario)|raw}}
            	{{formHidden(formulario.get('urlRedireciona'))|raw}}
                <div class="form-group" id="inputLoginUsuarioGroup">
                	{{formRow(formulario.get('usuario'))|raw}}
                </div>
                <div class="form-group" id="inputLoginSenhaGroup">
                	{{formRow(formulario.get('senha'))|raw}}
                </div>
                <div class="form-group">
                	{{formRow(formulario.get('submit'))|raw}}
                </div>
            {{form().closeTag()|raw}}
        </div>
    </div>
</div>
<script type="text/javascript" src="/js/login.js"></script>
{% endblock conteudo %}